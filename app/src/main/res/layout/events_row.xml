<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout
android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/linearLayout"
    android:orientation="vertical"

    android:weightSum="1">

    <ImageView
        android:id="@+id/eventrowImg"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:layout_height="170dp"
        />

    <LinearLayout
        android:id="@+id/event_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/linearstyle"
        android:orientation="horizontal"

        android:weightSum="1">

        <TextView
            android:id="@+id/evedate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.15"
            android:background="#29c675"
            android:gravity="center"
            android:text="  Sep
   27"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textColor="#fff" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.85"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/eveName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="Events"
                android:textColor="#333"
               android:textSize="20sp"
                android:singleLine="true"
                android:ellipsize="end"
                android:maxLines="1"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageView
                    android:layout_weight=".1"
                    android:id="@+id/evetime"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_watch" />

                <TextView
                    android:layout_weight=".9"
                    android:id="@+id/timeeve"
                    android:layout_width="0dp"
                    android:gravity="center|start"
                    android:layout_height="match_parent"
                    android:text="12:00"
                    android:textColor="#666"
                    android:textSize="16sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"

                >

                <ImageView
                    android:layout_weight=".1"
                    android:id="@+id/evelocate"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/evetime"
                    android:src="@drawable/ic_location" />

                <TextView
                    android:layout_weight=".8"
                    android:id="@+id/evelocation"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="New Delhi"
                    android:gravity="center|start"
                    android:textSize="16sp"
                    android:textColor="#666"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:padding="2dp"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
</android.support.v7.widget.CardView>